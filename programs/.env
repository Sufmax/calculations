# URL du serveur WebSocket
WS_URL=wss://your-worker.pages.dev/ws/vm

# Mot de passe VM (sera automatiquement défini par set_id.py sur Binder)
VM_PASSWORD=

# Exécutable Blender (par défaut: 'blender' dans le PATH)
BLENDER_EXECUTABLE=blender

# Intervalle heartbeat en secondes
HEARTBEAT_INTERVAL=5

# Taille des chunks de cache en bytes (défaut: 1 MB)
CHUNK_SIZE=1048576

# Nombre maximum de tentatives de reconnexion
MAX_RECONNECT_ATTEMPTS=10

# Délai entre les reconnexions en secondes
RECONNECT_DELAY=5
